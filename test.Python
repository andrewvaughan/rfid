    logging.Formatter(
        fmt=u"[%(asctime)s] %(name)-25s :: %(levelname)-8s %(message)s",
        datefmt='%m-%d-%Y %H:%M:%S'
    )
)

logging.getLogger().addHandler(ch)
logging.getLogger().setLevel(1)


